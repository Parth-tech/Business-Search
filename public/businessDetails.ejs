<div class="col p-3">
    <div class="row">
        <div class="col-6">
            <p class="text-left p-1 pb-0 h5 m-0 mt-1">Address</p>
            <p class="m-0 mb-1 p-1 pt-0 text-left"> 
                <%= formattedDetailedBusinessData.location %>    
            </p>
        </div>
        <div class="col-6">
            <p class="text-end p-1 h5 pb-0 m-0 mt-1">Category</p>
            <p class="m-0 mb-1 p-1 pt-0 text-end">
                <%= formattedDetailedBusinessData.categories %>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <p class="text-left p-1 h5 pb-0 m-0 mt-1">Phone</p>
            <p class="m-0 mb-1 p-1 pt-0 text-left">
                <%= formattedDetailedBusinessData.display_phone %>
            </p>
        </div>
        <div class="col-6">
            <p class="text-end p-1 h5 pb-0 m-0 mt-1">Price</p>
            <p class="m-0 mb-1 p-1 pt-0 text-end">
                <% if(formattedDetailedBusinessData.price != null || formattedDetailedBusinessData.price != undefined) { %>
                    <% for (let i = 0; i < formattedDetailedBusinessData.price.length; i++) { %>
                        <i class="fas fa-dollar-sign" style="color: green;"></i>
                    <% } %>
                <% } else { %>
                    Not Available
                <% } %>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <p class="text-left p-1 pb-0 h5 m-0 mt-1">Review Count</p>
            <p class="m-0 mb-1 p-1 pt-0 text-left">
                <%= formattedDetailedBusinessData.review_count %>
            </p>
        </div>
        <div class="col-6">
            <p class="text-end p-1 pb-0 h5 m-0 mt-1">Rating</p>
            <p class="m-0 mb-1 p-1 pt-0 text-end">
                <% if(formattedDetailedBusinessData.rating != null || formattedDetailedBusinessData.rating != undefined) { %>
                    <% for (let i = 0; i < 5; i++) { %>
                        <% if (i < Math.floor(formattedDetailedBusinessData.rating)) { %>
                        <i class="fas fa-star custom-filled-star"></i>
                        <% } else if (i === Math.floor(formattedDetailedBusinessData.rating) && formattedDetailedBusinessData.rating % 1 !== 0) { %>
                        <i class="fas fa-star custom-half-star"></i>
                        <% } else { %>
                        <i class="fas fa-star custom-empty-star"></i>
                        <% } %>
                    <% } %>
                <% } else { %>
                    Not Available
                <% } %>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-12 justify-content-center align-items-center text-center">
            <span class="text-left p-1 h5 m-0 mt-1">Share On: </span>
            <span class="m-0 mr-1"> 
                <a target="_blank" href="<%= formattedDetailedBusinessData.twitterURL %>">
                    <i class="fab fa-twitter fa-2x" style="color: #76dbf4;"></i>
                </a>  
            </span>
            &nbsp;&nbsp;
            <span class="m-0 mr-1"> 
                <a href="https://www.facebook.com/sharer/sharer.php?u=<%= formattedDetailedBusinessData.url %>" target="_blank">
                    <i class="fab fa-facebook-square fa-2x" style="color: #1c6bf2;"></i>
                </a>                 
            </span>
            &nbsp;&nbsp;
            <span class="m-0"> 
                <a href="<%=formattedDetailedBusinessData.url %>" target="_blank">
                    <i class="fab fa-yelp fa-2x" style="color: #ff1b1a;"></i>
                </a>                 
            </span>
        </div>
    </div>
    <% if(formattedDetailedBusinessData.photos != null 
        || formattedDetailedBusinessData.photos != undefined
        || formattedDetailedBusinessData.photos != "" ) { %>
        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <% for (let i = 0; i < formattedDetailedBusinessData.photos.length; i++) { %>
                    <% if (i === 0) { %>
                        <div class="carousel-item active">
                    <% } else { %>
                        <div class="carousel-item">
                    <% } %>
                        <img src="<%= formattedDetailedBusinessData.photos[i] %>" style="object-fit: contain; height: 300px; width: 300px;" class="d-block w-100" alt="Business Image">
                    </div>
                <% } %>
            </div>
            <% if(formattedDetailedBusinessData.photos.length > 1  ) { %>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            <% } %>
        </div>
    <% } %>

</div>